#include <stdio.h>
#include <stdint.h>

int main (void) {
	int32_t a = 0, b = 0;

	printf("BITWISE CALCULATOR\n\na = ");
	if (scanf("%d", a) == 0) printf("INVALID INPUT. Exiting...");
	else {
		print("b = ");
		if (scanf("%d", b) == 0) printf("INVALID INPUT. Exiting...");
		else {
			printf ("a & b = %d\n", a&b);
			printf ("a | b = %d\n", a|b);
			printf ("a ^ b = %d\n", a^b);
			printf ("~a = %d\n", ~a);
			printf ("~b = %d\n", ~b);
		}
	}

}

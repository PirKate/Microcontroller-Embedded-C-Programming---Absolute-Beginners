#include <stdio.h>
#include <stdint.h>

void wait_for_input();

int main (void) {

	float a, b;

	printf("a = ");

	if( scanf("%f",a) == 0 ) {
		printf("invalid input, Exiting...\n");
		wait_for_input();
		return 0;
	}

	printf("b = ");
	if( scanf("%f",b) == 0 ) {
		printf("invalid input, Exiting...\n");
		wait_for_input();
		return 0;
	}

	int a1 = a, b1 = b;
}

void wait_for_input() {

	printf("Press enter to exit this application");

	while(getchar() != '\n'){

	}

	getchar();

}
